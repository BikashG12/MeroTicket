<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbarCordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:id="@+id/grid_view"
        android:layout_width="fill_parent"
        android:layout_height="500dp">

        <GridView
            android:id="@+id/choose_seats"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:columnWidth="10dp"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:paddingTop="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/dummy_snack_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#e1d9d9"
        android:layout_below="@+id/grid_view">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1d9d9"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card_view_inside"
                >

                <TextView
                    android:id="@+id/seat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SEAT: "
                    android:textColor="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_toRightOf="@+id/seat_name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="match_parent"
                    android:layout_width="100dp"
                    />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:layout_toRightOf="@+id/txt1"

                    />
                <TextView
                    android:id="@+id/rs"
                    android:text="Rs."
                    android:layout_toRightOf="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_toRightOf="@+id/rs"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                    />
                <TextView
                    android:id="@+id/proceed"
                    android:layout_toEndOf="@+id/price"
                    android:layout_alignParentEnd="true"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="PROCEED"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ffffff"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                    />
            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>
